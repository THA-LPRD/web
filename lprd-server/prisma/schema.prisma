generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Display {
  id              Int     @id @default(autoincrement())
  mac_adr         String  @unique
  friendly_name   String
}

model Asset {
  id              String     @id @default(cuid())
  friendly_name   String
  file_path       String  @unique
}

model Playlist {
  id              String     @id @default(cuid())
  friendly_name   String
  json            Json
}

